# Application
APP_NAME=cms-api
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0


# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_SHUTDOWN_TIMEOUT=30s
HTTP_ALLOWED_ORIGINS=*

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=9090
GRPC_MAX_RECV_MSG_SIZE=4194304
GRPC_MAX_SEND_MSG_SIZE=4194304
GRPC_SHUTDOWN_TIMEOUT=30s

# Database (Postgres)
DB_DRIVER=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=cms
DB_PASSWORD=cms_secret
DB_NAME=cms
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# JWT
AUTH_PUBLIC_KEY_PATH=/app/keys/public.pem
AUTH_PRIVATE_KEY_PATH=/app/keys/private.pem
AUTH_ACCESS_TOKEN_EXPIRY=15m
AUTH_REFRESH_TOKEN_EXPIRY=168h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout
LOG_TIME_FORMAT=2006-01-02T15:04:05.000Z07:00

# Search (Meilisearch)
MEILI_HOST=meilisearch
MEILI_PORT=7700
MEILI_MASTER_KEY=meilisearch_dev_key

# Worker
WORKER_POLL_INTERVAL=5s
WORKER_BATCH_SIZE=10
WORKER_MAX_ATTEMPTS=5

# Telemetry
TELEMETRY_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=jaeger:4317
OTEL_SAMPLE_RATE=1.0
